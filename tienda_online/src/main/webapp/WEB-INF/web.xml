<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>VentasSerlet</servlet-name>
		<display-name>VentasSerlet</display-name>
		<description></description>
		<servlet-class>com.curso.mercado.web.VentasSerlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListaProducosServlet</servlet-name>
		<display-name>ListaProducosServlet</display-name>
		<description></description>
		<servlet-class>com.curso.mercado.web.ListaProducosServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BorrarServlet</servlet-name>
		<display-name>BorrarServlet</display-name>
		<description></description>
		<servlet-class>com.curso.mercado.web.BorrarServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateServlet</servlet-name>
		<display-name>UpdateServlet</display-name>
		<description></description>
		<servlet-class>com.curso.mercado.web.UpdateServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>VentasSerlet</servlet-name>
		<url-pattern>/comprar</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListaProducosServlet</servlet-name>
		<url-pattern>/listaProductos</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BorrarServlet</servlet-name>
		<url-pattern>/borrar</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateServlet</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
